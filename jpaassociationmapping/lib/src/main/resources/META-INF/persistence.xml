<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="jpaassociationmapping">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!--<class>jpawithgradle.data.Employee</class> -->
		<class>jpaassociationmapping.onetooneuni.Student</class>
		<class>jpaassociationmapping.onetooneuni.Address</class>
		<class>jpaassociationmapping.onetoonebi.Address</class>
		<class>jpaassociationmapping.onetoonebi.Address</class>
		<class>jpaassociationmapping.onetomany.Department</class>
		<class>jpaassociationmapping.onetomany.Employee</class>
		<class>jpaassociationmapping.onetomany.OneToManyDemo</class>
		<class>jpaassociationmapping.manytomany.Order</class>
		<class>jpaassociationmapping.manytomany.Product</class>
		<class>jpaassociationmapping.manytomany.ManyToManyDemo</class>
		<class>jpaassociationmapping.jpaassociationmappingstc.EmployeeSTC</class>
		<class>jpaassociationmapping.jpaassociationmappingstc.ManagerTPC</class>
		<class>jpaassociationmapping.jpaassociationmappingstc.STCDemo</class>
		<class>jpaassociationmapping.jpaassociationmappingtpc.TPCDemo</class>
		<class>jpaassociationmapping.jpaassociationmappingtpc.EmployeeTPC</class>
		<class>jpaassociationmapping.jpaassociationmappingtpc.ManagerTPC</class>




		<!-- <class>jpawithgradle.data.Department</class> -->
		<!--<class>jpawithgradle.data.Location</class> -->

		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/soleradb" />
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="password" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL92Dialect" />
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>
</persistence>